


@model List<WebsiteBanHang.Context.Category>
@{
    ViewBag.Title = "Index";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4">
    <div class="container">
        <div class="row align-items-end justify-content-center text-center">
            <div class="col-lg-7">
                <h2 class="mb-0">Category</h2>
            </div>
        </div>
    </div>
</div>
<section class="section-content padding-y">
    <div class="container">

        <nav class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card card-category">
                        <div class="img-wrap" style="background: #ffd7d7">
                            <a href="@Url.Action("ProductCategory","Category", new {Id = item.Id})">
                                <img src="~/Content/images/categoty/@item.Avartar">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="@Url.Action("ProductCategory","Category", new {Id = item.Id})">@item.Name</a></h4>
                        </div>
                    </div>
                </div> <!-- col.// -->
            }
        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
</section>
