@model WebsiteBanHang.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
}




<div class="hero-slide owl-carousel site-blocks-cover">
    <div class="intro-section" style="background-image: url(/Content/images/baner1.png); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%; ">

        <div class="container">
            <div class="row align-items-center">

                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">

                    <h1>Chào Mừng Đến Với Cửa Hàng Của Chúng Tôi</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="intro-section" style="background-image: url(/Content/images/baner3.jpg); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%; ">

        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                    <h1>Cảm Ơn Bạn Đã Ghé Thăm.</h1>
                </div>
            </div>
        </div>
    </div>

</div>




<div class="container">
    <h2 style="text-align: center; color: black; margin-top: 30px; "><a href="@Url.Action("Index","Category")" class=""><b>DANH MỤC</b></a></h2>
    <ul class="menu cf">
        @foreach (var item in Model.ListCategory)
        {
            <li>
                @Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id = item.Id }, null)
            </li>
        }
    </ul>



</div>













<section class="padding-bottom">
    <div class="card card-deal">
        <div class="col-heading content-body">
            <header class="section-heading">
                <h1 class="section-title">Giảm Giá Sốc</h1>

            </header><!-- sect-heading -->
            <div class="timer">
                <div> <span class="num" id="days">6</span> <div class="clocktxt"><small>Days</small></div></div>
                <div> <span class="num" id="hours"></span> <div class="clocktxt"><small>Hours</small></div></div>
                <div> <span class="num" id="minutes"></span>  <div class="clocktxt"><small>Minutes</small></div> </div>
                <div> <span class="num" id="seconds"></span> <div class="clocktxt"><small>Seconds</small></div></div>
            </div>




        </div> <!-- col.// -->
        <div class="row no-gutters items-wrap">
            @foreach (var item in Model.ListProduct.Where(n => n.Typeld == 1).Take(3))
            {
                <div class="col-md col-6">
                    <figure class="card-product-grid card-sm">
                        <a href="@Url.Action("Detail","Product", new { Id = item.Id})" class="img-wrap">
                            <img src="~/Content/images/items/@item.Avartar">
                        </a>
                        <div class="text-wrap p-3">
                            @Html.ActionLink(item.Name, "Detail", "Product", new { Id = item.Id }, null)
                            <span class="badge badge-danger"> -20% </span>
                        </div>
                    </figure>
                </div> <!-- col.// -->
            }

        </div>
    </div>

</section>


<section class="padding-bottom">
    <header class="section-heading heading-line">
        <h4 class="title-section text-uppercase">Apple</h4>
    </header>

    <div class="card card-home-category">
        <div class="row no-gutters">
            <div class="col-md-3">

                <div class="home-category-banner bg-light-orange">

                    <a href="#" class="btn btn-outline-primary rounded-pill">Source now</a>
                </div>

            </div>
            <!-- col.// -->
            <div class="col-md-9">
                <ul class="row no-gutters bordered-cols">
                    @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 1).Take(5))
                    {
                        <li class="col-6 col-lg-3 col-md-4">
                            <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="item">
                                <div class="card-body">

                                    <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="img-wrap">
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avartar">
                                    </a>
                                    <a href="@Url.Action("Detail", "Product", new { Id = item.Id })" class="text-muted"><i class="fa fa-map-marker-alt"></i>@item.Name</a>
                                    <div class="price mt-1">@item.Price  <span class="badge badge-danger"> VND </span></div>
                                </div>
                            </a>
                        </li>
                    }

                </ul>
            </div> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- card.// -->
</section>

